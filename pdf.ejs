<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style type="text/css">
        body {
            font-size: 0.5rem;
        }
        .main{
            padding: 20px;
        }
        .info{
            width: 100%;
            height: 100px;
            border: 1px solid black
        }
        .container {
            position: relative;
            display: -webkit-box;
            display: -webkit-flex;
            display: flex;

        }

        .container_picture {
            position: relative;
            width: 40px;
            height: 25px;
            border: 1px solid black;
        }

        .picture {
            position: absolute;
            right: 0;
            width: auto;
            max-height: 100%;
            max-width: 100%;
        }

        .model{

          
           position: relative;
            border: 1px solid black;
            height: 25px;
            width: 100px;
            padding-left: 5px;
        }
        .span_model{
            position: absolute;
           top: 50%;
           left: 50%;
        }
        .count{
            position: relative;
            text-align: center;
            align-items:center;
            border: 1px solid black;
            height: 25px;
            width: 50px;
        }

        .span_count{
            display: -webkit-flex;
            justify-content: center;
            position: absolute;
           top: 50%;
           left: 50%;
        }
    </style>
    <title>Document</title>
</head>

<body>
    <div class="main">
        <div class="info"></div>
        <%cart.map((e) => { %>
        <div class="container">
            <div class="container_picture">
                <img class="picture" src="http://localhost:5000/img_products/<%=e.brand%>/<%=e.model%>/1.png" alt="1" />
            </div>
            <div class="model">
                <span class="span_model"><%=e.model%></span>
            </div>
            <div class="count">
                <span class="span_count"><%=e.count%></span>
            </div>
        </div>
        <%}) %>
    </div>
</body>

</html>